# Database Configuration
# Requirements: Strong password (min 16 chars), alphanumeric + special chars
DB_USER=CHANGE_ME_db_user
DB_PASSWORD=CHANGE_ME_secure_db_password
DB_NAME=pawpaw_db
POSTGRES_USER=CHANGE_ME_postgres_user
POSTGRES_PASSWORD=CHANGE_ME_secure_postgres_password
POSTGRES_DB=pawpaw_db
# Connection string format: postgresql://USER:PASSWORD@HOST:PORT/DB_NAME
DATABASE_URL=CHANGE_ME_postgresql_connection_string

# Redis Configuration
# Requirements: Secure connection string, preferably with authentication
REDIS_URL=CHANGE_ME_redis_connection_string

# Application Secrets
# Requirements: Minimum 32 characters, high entropy (random string)
JWT_SECRET=CHANGE_ME_min_32_chars_random_string_for_jwt

# Stripe Configuration
# Requirements: Use Live keys for production, Test keys for development. Starts with pk_live/sk_live or pk_test/sk_test
STRIPE_PUBLISHABLE_KEY=CHANGE_ME_pk_stripe_key
STRIPE_SECRET_KEY=CHANGE_ME_sk_stripe_key
STRIPE_WEBHOOK_SECRET=CHANGE_ME_whsec_stripe_webhook_secret
VITE_STRIPE_PUBLISHABLE_KEY=CHANGE_ME_pk_stripe_key

# Frontend Configuration
# Requirements: Full URL of the backend API
VITE_API_URL=CHANGE_ME_backend_api_url

# Admin Configuration
# Requirements: Valid email address
ADMIN_EMAIL=CHANGE_ME_admin_email
# Requirements: Strong password (min 12 chars, upper, lower, number, special)
ADMIN_PASSWORD=CHANGE_ME_strong_admin_password

# Directus Configuration (If used)
# Requirements: High entropy random string
DIRECTUS_KEY=CHANGE_ME_secure_random_key
DIRECTUS_SECRET=CHANGE_ME_secure_random_secret
